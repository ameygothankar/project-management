<% include ../partials/header %>
<div class="row" style="margin-left: 50px; margin-right:50px ;margin-top:50px">
  <form
    action="http://localhost:4000/events/update/<%= items[0].id %>"
    method="post"
    class="col s12"
  >
    <input type="hidden" name="id" value="<%= items[0].id%>" />
    <div class="form-group row">
      <label for="author" class="col-2 col-form-label">Name</label>
      <div class="col-10">
        <input
          type="text"
          name="author"
          value="<%= items[0].author%>"
          class="form-control"
        />
      </div>
    </div>
    <div class="form-group row">
      <label for="p_name" class="col-2 col-form-label">Project Name</label>
      <div class="col-10">
        <input
          type="text"
          name="p_name"
          value="<%= items[0].p_name%>"
          class="form-control"
        />
      </div>
    </div>
    <div class="form-group row">
      <label for="p_desc" class="col-2 col-form-label"
        >Project Decription</label
      >
      <div class="col-10">
        <textarea
          name="p_desc"
          id="p_desc"
          cols="30"
          rows="4"
          class="form-control"
        >
<%= items[0].p_desc%></textarea
        >
      </div>
    </div>

    <div class="form-group row">
      <label for="submit" class="col-2 col-form-label" style="color: #ffffff"
        >Submit</label
      >
      <div class="col-10">
        <input
          type="submit"
          name="submit"
          value="Save project"
          class="btn btn-primary btn-lg"
        />
      </div>
    </div>
  </form>
</div>
<% include ../partials/footer %>
