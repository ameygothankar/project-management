<% include ../partials/header %>
<div class="row" style="margin-left: 50px; margin-right:50px ;margin-top:50px">
  <form action="http://localhost:4000/login" method="post" class="col s12">
    <input type="hidden" name="id" value="" />
    <div class="form-group row">
      <label for="email" class="col-2 col-form-label">E-mail</label>
      <div class="col-10">
        <input type="email" name="email" value="" class="form-control" />
      </div>
    </div>
    <div class="form-group row">
      <label for="password" class="col-2 col-form-label">Password</label>
      <div class="col-10">
        <input type="password" name="password" value="" class="form-control" />
      </div>
    </div>

    <div class="form-group row">
      <label for="submit" class="col-2 col-form-label" style="color: #ffffff"
        >login</label
      >
      <div class="col-10">
        <input
          type="submit"
          name="submit"
          value="Save project"
          class="btn btn-primary btn-lg"
        />
      </div>
      <div>
        <span>New User <a href="/signUp">SignUP</a></span>
      </div>
    </div>
  </form>
</div>
